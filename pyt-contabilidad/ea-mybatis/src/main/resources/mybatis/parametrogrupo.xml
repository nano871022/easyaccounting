<?xml version = "1.0" encoding = "UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pyt.service.dto.parametrogrupo">

	<insert id="insert"
		parameterType="com.pyt.service.dto.ParametroGrupoDTO">
		INSERT INTO TBL_PARAMETER_GROUP
		(scode
		,sparameter
		,sgroup
		,dcreate
		,dupdate
		,ddelete
		,screater
		,supdater
		,sdeleter)
		VALUES
		(#{codigo}
		,#{parametro}
		,#{grupo}
		,#{fechaCreacion}
		,#{fechaActualizacion}
		,#{fechaEliminacion}
		,#{creador}
		,#{actualizador}
		,#{eliminador});
	</insert>

	<select id="select"
		parameterType="com.pyt.service.dto.ParametroGrupoDTO"
		resultType="com.pyt.service.dto.ParametroGrupoDTO">
		SELECT
		scode as codigo
		,sparameter as parametro
		,sgroup as grupo
		,dcreate
		as fechaCreacion
		,dupdate as fechaActualizacion
		,ddelete as
		fechaEliminacion
		,screater as creador
		,supdater as actualizador
		,sdeleter as eliminador
		FROM TBL_PARAMETER_GROUP

		<include refid="pgwhere"></include>
	</select>

	<select id="update"
		parameterType="com.pyt.service.dto.ParametroGrupoDTO">
		UPDATE TBL_PARAMETER_GROUP
		SET
		scode = #{codigo}
		,sparameter =
		#{parametro}
		,sgroup = #{grupo}
		,dcreate = #{fechaCreacion}
		,dupdate =
		#{fechaActualizacion}
		,ddelete = #{fechaEliminacion}
		,screater =
		#{creador}
		,supdater = #{actualizador}
		,sdeleter = #{eliminador}
		<include refid="pgwhere"></include>
	</select>

	<select id="select_count"
		parameterType="com.pyt.service.dto.ParametroGrupoDTO"
		resultType="Integer">
		SELECT
		count(scode)
		FROM TBL_PARAMETER_GROUP
		<include refid="pgwhere"></include>
	</select>
	<sql id="pgwhere">
		<where>
			<if test="codigo != null">
				and scode = #{codigo}
			</if>
			<if test="parametro != null">
				and sparameter = #{parametro}
			</if>
			<if test="grupo != null">
				and sgroup = #{grupo}
			</if>
		</where>
	</sql>



</mapper>